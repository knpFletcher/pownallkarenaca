<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:paddingBottom="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:id="@+id/imageLayout"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="22dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_warning_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageViewImportant" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_check_box_outline_blank_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewImportant"
            android:layout_toEndOf="@+id/imageViewImportant"
            android:id="@+id/imageViewTodo"
            android:src="@drawable/ic_check_box_black_24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_wb_incandescent_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewTodo"
            android:layout_toEndOf="@+id/imageViewTodo"
            android:id="@+id/imageViewIdea"
            android:src="@drawable/ic_lightbulb_outline_black_24dp"/>
    </RelativeLayout>

    <Button
        android:text="@string/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnOK"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:layout_below="@+id/imageLayout"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/txtDescription"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_below="@+id/txtTitle"
        android:layout_alignLeft="@+id/imageLayout"
        android:layout_alignStart="@+id/imageLayout"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:id="@+id/picShow"/>

</RelativeLayout>